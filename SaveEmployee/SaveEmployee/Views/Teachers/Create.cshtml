@model UniversityApplication.Models.Teacher

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="sidebar">
        <ul>
            <li><a href="../Departments/Create">Save Department</a></li>
            <li><a href="../Departments/ShowAllDepartments">View Departments</a></li>
            <li><a href="../Courses/Create">Save Course</a></li>
            <li class="corners"><a href="../Teachers/Create">Save Teacher</a></li>
            <li><a href="../CourseTeacher/AssignCourse">Course Assign to Teacher</a></li>
            <li><a href="../CourseStaticss/CourseStatistics">View Course Statics</a></li>
            <li><a href="../Students/Create">Register Student</a></li>
            <li><a href="../Classrooms/AllocateClassRoom">Allocate Classrooms</a></li>
            <li><a href="../Classrooms/ClassScheduleAndRoomAllocation">Class Schedule and Room Allocation</a></li>
            <li><a href="../CourseStudents/StudentToCourse">Enroll in a Course</a></li>
            <li><a href="../StudentResults/SaveResult">Save Student Result</a></li>
            <li><a href="../ViewResult/Create">View Result</a></li>
            <li><a href="../Unassign/UnassignCourse">Unassign All Courses</a></li>
            <li><a href="../Unassign/Unallocate">Unallocate All Classrooms</a></li>
        </ul>
    </div>

    <div style="background-color: white; padding-left: 25%; width: 80%; height: 100%;">
        <div class="container body-content">
            <br /><h4>Save Teacher Information</h4>
            <div class="form-horizontal">
                
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherName, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control hideOnClick" } })
                        @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherAddress, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TeacherAddress, new { htmlAttributes = new { @class = "form-control hideOnClick" } })
                        @Html.ValidationMessageFor(model => model.TeacherAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherEmail, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TeacherEmail, new { htmlAttributes = new { @class = "form-control hideOnClick" } })
                        @Html.ValidationMessageFor(model => model.TeacherEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherContact, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TeacherContact, new { htmlAttributes = new { @class = "form-control hideOnClick" } })
                        @Html.ValidationMessageFor(model => model.TeacherContact, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherDesignation, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.TeacherDesignation, new SelectList(ViewBag.Designations, "Value", "Text"), "Select Designation", new { @class = "form-control hideOnClick" })
                        @Html.ValidationMessageFor(model => model.TeacherDesignation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherDepartmentCode, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.TeacherDepartmentCode, new SelectList(ViewBag.Departments, "Value", "Text"), "Select Department", new { @class = "form-control hideOnClick" })
                        @Html.ValidationMessageFor(model => model.TeacherDepartmentCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherCredit, htmlAttributes: new { @class = "col-md-2 labelStyle" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TeacherCredit, new { htmlAttributes = new { @class = "form-control hideOnClick" } })
                        @Html.ValidationMessageFor(model => model.TeacherCredit, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class=" col-sm-5">
                    </div>
                    <div class="col-sm-5">
                        <input type="submit" value="Save" class="btn btn-default" style="width:100px; height:30px" />
                    </div>
                </div>
                
            </div>


            @if (ViewBag.Status == "Success")
            {
                <div class="alert alert-success" id="hideThis">
                    <p>@ViewBag.Message</p>
                </div>
            }
            else if (ViewBag.Status == "Error")
            {
                <div class="alert alert-danger" id="hideThis">
                    <p> @ViewBag.Message</p>
                </div>
            }


        </div>
    </div>
}

@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $(".hideOnClick").click(function () {
                $("#hideThis").hide();
            });
        });
    </script>
}
